{
  "compilerOptions": {
    "target": "ES2020",                  
    "module": "CommonJS",               
    "outDir": "./dist",                
    "rootDir": "./src",                 
    "strict": true,                     
    "esModuleInterop": true,            
    "moduleResolution": "node",         
    "declaration": true,                
    "declarationMap": true,             
    "sourceMap": true,                  
    "skipLibCheck": false,               
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src"],                   
  "exclude": ["node_modules", "dist"]   
}

